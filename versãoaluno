    }
    h1 {
      color: #333;
    }
    label, select, input {
      margin-top: 10px;
      display: block;
    }
    input[type="number"] {
      width: 100px;
    }
    .resultado {
      margin-top: 20px;
      padding: 15px;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 0 5px #ccc;
    }
  </style>
